{% extends "base.twig" %}

{% block title %}Register{% endblock %}

{% block body %}
	<div class="container">
		<h2>Register</h2>
		<p>Success! Thanks for signing up.</p>
		<p>
			Please check your email to activate your account.
			{% if resend_token is not null %}
				<a href="/register/resend-activation/{{ resend_token }}">Resend activation email</a>.</p>
			{% endif %}
	</div>
{% endblock %}